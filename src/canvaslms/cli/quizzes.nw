    if minted_lang:
      result_parts.append(f"\n\\begin{{minted}}{{{minted_lang}}}\n{code_text}\n\\end{{minted}}\n")
    else:
      result_parts.append(f"\n\\begin{{verbatim}}\n{code_text}\n\\end{{verbatim}}\n")
  else:
    if minted_lang:
      result_parts.append(f"\\mintinline{{{minted_lang}}}{{{code_text}}}")
    else:
