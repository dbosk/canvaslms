def is_new_quiz(quiz):
  """Determine if a quiz object is a New Quiz (Quizzes.Next)"""
  # Check if it's a NewQuiz object (from get_new_quizzes())
  # vs a Quiz object (from get_quizzes())
  return quiz.__class__.__name__ == 'NewQuiz'
